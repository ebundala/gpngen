{
    "compilerOptions": {
        "incremental": true,
        "target": "es2017",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": "./packages",
        "skipLibCheck": true,
        "paths": {
            "@mechsoft/*": [
                "*/src"
            ]
        }
    }
}